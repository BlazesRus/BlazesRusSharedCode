<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharpGlobalCode.GlobalCode_ExperimentalCode"
             x:Class="CSharpGlobalCode.GlobalCode_ExperimentalCode.SmallDecUpdown"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="100">
    <UserControl.Resources>
        <local:SuperDec_SmallDec_TypeConverter x:Key="SuperDec_SmallDec_TypeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Label x:Name="ValueDisplay" VerticalAlignment="Center" HorizontalContentAlignment="Right" Content="0.0000" Margin="0,0,17,0"/>
        <ScrollBar x:Name="scrollBar" HorizontalAlignment="Right" VerticalAlignment="Top" Value="{Binding Value}" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}"/>
    </Grid>
</UserControl>